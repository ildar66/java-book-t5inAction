<html t:type="layout" xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd">

    <p>${successMessage}</p>

    <form t:type="form" clientValidation="none">
        <t:errors/>
        <div class="form-row">
            <label t:type="label" for="birthdayField"/>
            <input t:type="datefield" t:id="birthdayField" value="birthday" validate="required"/>
            <!-- <input t:type="datefield" t:id="birthdayField" value="birthday" validate="required" hideTextField="true"/> -->
        </div>

        <div class="form-row">
            <input type="submit" value="Submit" />
        </div>
    </form>

</html>